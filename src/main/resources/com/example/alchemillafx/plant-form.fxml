<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>


<?import javafx.scene.control.*?>
<GridPane fx:controller="com.example.alchemillafx.PlantController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
   <padding><Insets top = "25" right="25" bottom = "10" left = "25"/></padding>

   <Text text = "Submit Plant info" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

   <!--Insert a lot more fields here, to put into Plant Object-->
   <Label text = "Plant Name: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
   <TextField fx:id = "plantname" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

   <Label text = "Water Delta: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
   <TextField fx:id = "water" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

   <Label text = "Food Delta: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
   <TextField fx:id = "fooddelta" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

   <Label text = "Food: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
   <TextField fx:id = "food" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

   <Label text = "Instructions: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
   <TextField fx:id = "instruction" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

   <Label text = "Description: " GridPane.columnIndex="0" GridPane.rowIndex="6"/>
   <TextField fx:id = "description" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

   <Label text = "Plant Image Path: " GridPane.columnIndex="0" GridPane.rowIndex="7"/>
   <TextField fx:id = "plantimagepath" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

   <HBox spacing="10" alignment="bottom_right"
         GridPane.columnIndex="1" GridPane.rowIndex="8">
      <Button text="Submit Plant Information" onAction="#onButtonClick"/>
   </HBox>

   <!-- Confirmation of Button Pressed -->
   <Text fx:id="actiontarget" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>
