<?import javafx.scene.control.*?>
<GridPane fx:id = "vbox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alchemillafx.PlantController">
   <padding><Insets top = "25" right="25" bottom = "10" left = "25"/></padding>

   <Text text = "Submit Plant info" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

   <!--Insert a lot more fields here, to put into Plant Object-->
